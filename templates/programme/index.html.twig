{% extends 'base.html.twig' %}

{% block title %}Hello ProgrammeController!{% endblock %}

{% block body %}
    <div class="container">
        <h2>Les sorties de 2021</h2>
        <div class="row flex">
            {% for sortie in sorties %}
                <div class="col-3">
                    <div class="card">
                        <h5 class="card-title">
                        </h5>
                        <p class="card-text">
                            {{ sortie.date|date("m/d/Y/H:i:s") }}
                            {{ sortie.text }}
                            {{ sortie.distance }}kms
                            {{ sortie.denivele }} D+
                            {{ sortie.lieuDepart }} -> {{ sortie.lieuDirection }}

                        </p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
