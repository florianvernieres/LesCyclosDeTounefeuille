{% extends 'base.html.twig' %}

{% block title %}Hello ClubController!{% endblock %}

{% block body %}
    <div class="container">
        <h2>le bureau du club</h2>
    </div>
    <div class="row flex">
        {% for membre in membres %}
            <div class="col-3">
                <div class="card">
                    <h5 class="card-title">
                    </h5>
                    <p class="card-text">
                        {{ membre.nom }}
                        {{ membre.prenom }}
                        {{ membre.fonction }}
                    </p>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="container">
        <h2>les projets pour l'ann√©e 2021</h2>
        <div class="row flex">
            {% for projet in projets %}
                <div class="col-3">
                    <div class="card">
                        <h5 class="card-title">
                        </h5>
                        <p class="card-text">
                            {{ projet.nom }}
                            {{ projet.description }}
                            {{ projet.date|date("m/d/Y") }}
                        </p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
